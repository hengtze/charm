	            android:layout_gravity="center_vertical"
	            android:layout_marginRight="12dip"
	            android:background="#FFF"
	            android:gravity="center_vertical|left"
	            android:paddingLeft="10dip"
	            android:lines="3"
	            android:textOn="TAP TO STOP SENSING"
